{
  "name": "seven7k-chat",
  "version": "1.0.0",
  "description": "Multi-platform gaming chat application",
  "main": "index.js",
  "scripts": {
    "start": "node backend/index.js",
    "dev": "nodemon backend/index.js",
    "test": "jest",
    "build": "cd frontend && npm run build",
    "lint": "eslint .",
    "format": "prettier --write .",
    "predeploy": "node backend/scripts/deploy.js",
    "docker:build": "docker build -t seven7k-chat .",
    "docker:run": "docker run -p 3000:3000 --env-file .env seven7k-chat",
    "docker:compose": "docker-compose up -d",
    "docker:compose:build": "docker-compose up -d --build"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.21.1",
    "helmet": "^7.0.0",
    "i18next": "^23.4.6",
    "mongoose": "^7.5.0",
    "openai": "^4.0.0",
    "socket.io": "^4.7.2",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "eslint": "^8.47.0",
    "jest": "^29.6.4",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
